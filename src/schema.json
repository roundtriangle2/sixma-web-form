      "type": "string",
      "title": "Pais de nacimiento",
      "enum": ["USA"]
    },
    "city": { "type": "string", "title": "Ciudad", "enum": ["San antonio"] },
    "state": { "type": "string", "title": "Estado", "enum": ["Texas"] },
    "birthPlace": { "type": "string", "title": "Lugar de nacimiento","minLength": 10 },
    "dateOfDeath": {
      "type": "string",
      "title": "Fecha de muerte",
      "format": "date"
    },
    "adfanHasBcertCpy": {
      "type": "boolean",
      "title": "ADFAN tiene copia de el certificado de nacimiento"
    },
    "hairColor": {
      "type": "string",
      "title": "Color de pelo",
      "enum": ["Negro"]
    },
    "eyeColor": {
      "type": "string",
      "title": "Color de ojos",
      "enum": ["Negro"]
    },
    "height": { "type": "integer", "title": "Altura" },
    "weight": { "type": "integer", "title": "Peso" },
    "particularMarkers": {
      "type": "string",
      "title": "Marcadores particulares"
    },
    "mainLanguage": {
      "type": "string",
      "title": "Lenguage primario",
      "enum": ["ingles"]
    },
    "religion": { "type": "string", "title": "Religion", "enum": ["Ninguna"] },
    "needsInterpreter": { "type": "boolean", "title": "Necesita interprete" },
    "civilStatus": {
      "type": "string",
      "title": "Estado civil",
      "enum": ["Casadoa"]
    },
    "secondLanguage": {
      "type": "string",
      "title": "Lenguuaje secundario",
      "enum": ["Espanol"]
